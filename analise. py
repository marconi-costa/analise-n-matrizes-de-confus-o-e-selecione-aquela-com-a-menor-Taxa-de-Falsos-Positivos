import sys
from io import StringIO

# Dados de entrada (você pode modificar aqui)
entrada = """3
50,10,5,85
20,5,8,67
30,0,4,88
"""

# Redireciona entrada padrão para usar os dados acima
sys.stdin = StringIO(entrada)

# Funções do programa
def calcular_fpr(fp: int, tn: int) -> float:
    total = fp + tn
    return fp / total if total > 0 else 0.0

def formatar_valor(valor: float) -> str:
    texto = f"{valor:.2f}"
    return texto.rstrip('0').rstrip('.') if '.' in texto else texto

def main() -> None:
    n = int(input().strip())
    best_fpr = float('inf')
    best_index = -1

    for idx in range(n):
        tp, fp, fn, tn = map(int, input().strip().split(','))
        fpr = calcular_fpr(fp, tn)

        if fpr < best_fpr:
            best_fpr = fpr
            best_index = idx

    print(f"Index: {best_index}")
    print(f"FPR: {formatar_valor(best_fpr)}")

if __name__ == "__main__":
    main()